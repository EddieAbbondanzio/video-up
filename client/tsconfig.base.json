{
  "compilerOptions": {
    "target": "es2015",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxImportSource": "react",
    "typeRoots" : ["node_modules/@types", "src/types"]
  },
}